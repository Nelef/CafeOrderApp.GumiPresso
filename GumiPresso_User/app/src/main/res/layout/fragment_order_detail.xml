<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="productVM"
            type="com.ssafy.gumipresso.viewmodel.ProductViewModel" />
        <variable
            name="commentVM"
            type="com.ssafy.gumipresso.viewmodel.CommentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.MenuDetailFragment">

        <ImageView
            android:id="@+id/iv_menu_img"
            loadImage="@{productVM.product.img}"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#F0E3DB"
            android:src="@drawable/coffee1"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/tv_menu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp"
            android:text="아메리카노"
            app:text="@{productVM.product.name}"
            android:textColor="@color/coffee_dark_brown"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_menu_img" />

        <TextView
            android:id="@+id/tv_menu_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="가격"

            android:textColor="@color/coffee_dark_brown"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/tv_menu_name"
            app:layout_constraintTop_toBottomOf="@id/tv_menu_name" />

        <TextView
            android:id="@+id/tv_menu_quantity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="수량"
            android:textColor="@color/coffee_dark_brown"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/tv_menu_name"
            app:layout_constraintTop_toBottomOf="@id/tv_menu_price_title" />


        <TextView
            android:id="@+id/tv_menu_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:text="@{productVM.product.price +`원`}"
            android:textColor="@color/coffee_dark_brown"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_menu_price_title" />

        <ImageView
            android:id="@+id/btn_minus"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/minus"
            app:layout_constraintStart_toStartOf="@+id/tv_menu_price"
            app:layout_constraintTop_toTopOf="@id/tv_menu_quantity_title"
            app:tint="@color/coffee_point_red" />


        <TextView
            android:id="@+id/tv_menu_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="@{productVM.quantity.toString()}"
            android:textColor="@color/coffee_dark_brown"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@id/btn_minus"
            app:layout_constraintTop_toTopOf="@id/tv_menu_quantity_title" />

        <ImageView
            android:id="@+id/btn_plus"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/add"
            app:layout_constraintStart_toEndOf="@+id/tv_menu_quantity"
            app:layout_constraintTop_toTopOf="@id/tv_menu_quantity_title"
            app:tint="@color/coffee_point_red" />

        <LinearLayout
            android:id="@+id/linear_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="#F0E3DB"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_menu_quantity_title">

            <TextView
                android:id="@+id/tv_title_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="평점"
                android:textColor="@color/coffee_dark_brown"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                rating="@{commentVM.commentList.size() > 0 ? commentVM.avgRating : 0f}"
                android:textColor="@color/coffee_brown"
                android:textSize="30sp" />

            <RatingBar
                android:id="@+id/ratingBar_menu_detail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:progressTint="@color/coffee_point_red"
                android:rating="@{commentVM.avgRating}"
                android:max="5"
                android:isIndicator="true"
                />


        </LinearLayout>

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_regular"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@id/btn_add_comment"
            app:layout_constraintEnd_toStartOf="@id/btn_add_comment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_score"
            app:layout_constraintTop_toTopOf="@id/btn_add_comment" />

        <Button
            android:id="@+id/btn_add_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@drawable/button_go_order"
            android:text="등록"
            android:textColor="@color/coffee_dark_brown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_score" />


        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/coffee_point_red"
            android:text="담기"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_order_detail_no_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등록된 댓글이 없습니다."
            android:visibility="@{commentVM.commentList.size() > 0 ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toTopOf="@+id/btn_add"
            app:layout_constraintTop_toBottomOf="@id/btn_add_comment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_comment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_add"
            app:layout_constraintTop_toBottomOf="@id/btn_add_comment" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>