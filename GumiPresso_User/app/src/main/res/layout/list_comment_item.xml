<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable
            name="fragment"
            type="com.ssafy.gumipresso.fragment.OrderDetailFragment" />
        <variable
            name="commentVM"
            type="com.ssafy.gumipresso.model.dto.Comment" />
        <variable
            name="userVM"
            type="com.ssafy.gumipresso.viewmodel.UserViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/coffee_dark_brown"
            android:text="@{commentVM.comment}"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@id/btn_menu_edit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/btn_menu_edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/edit_round"
            android:backgroundTint="@color/coffee_brown"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/btn_menu_delete"
            app:layout_constraintTop_toTopOf="@id/btn_menu_delete" />


        <Button
            android:id="@+id/btn_menu_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/indicator"
            android:backgroundTint="@color/coffee_brown"
            android:visibility="gone"
            android:text="@string/X"
            app:layout_constraintBottom_toBottomOf="@id/tv_notice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_notice" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>